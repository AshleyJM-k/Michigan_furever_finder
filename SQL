DROP DATABSE adoption_db;
CREATE DATABASE IF NOT EXISTS adoption_db;
USE adoption_db;

CREATE TABLE BREED(
breedID NOT NULL int,
breedName text(15),
PRIMARY KEY (breedID),
);

CREATE TABLE PERSONALITY(
personality_id int,
personality text(15),
);

CREATE TABLE DOG_COLOR (
colorId text(15)
);

CREATE TABLE DOG_BREED (
breedID int(10),
multi boolean
);

CREATE TABLE DOG (
dogID int(15),
name text(15),
age int(2),
sex text(6),
birthday date,
picture text,
status text(15), 
records text(15),
);

CREATE TABLE LOCATION (
location ID int(10)
locationName text(15)
);

